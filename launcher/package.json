{
  "name": "feh-launcher",
  "version": "0.1.0",
  "private": true,
  "description": "GUI launcher/updater for FEH Barracks Manager",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable --x64"
  },
  "dependencies": {
    "adm-zip": "^0.5.16"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^26.0.0"
  },
  "build": {
    "appId": "com.gogo-fogo.feh-barracks-launcher",
    "productName": "FEH-Barracks-Launcher",
    "directories": {
      "output": "../dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "launcher-core.js",
      "renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ],
    "forceCodeSigning": false,
    "win": {
      "icon": "assets/gullveig.png",
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "portable": {
      "artifactName": "FEH-Barracks-Launcher.exe"
    }
  }
}
